# StreamBuddy Project Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Application Settings
APP_NAME=StreamBuddy
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered chat processing for Indonesian streamers

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=streambuddy
DB_SSL=false

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=streambuddy:

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE=30000
REDIS_POOL_IDLE=10000

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Settings
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
SLOW_REQUEST_THRESHOLD=1000
LOG_FORMAT=json

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
DB_BACKUP_PATH=./backups
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_COMPRESSION=true
DB_BACKUP_ENCRYPTION=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Twitch Integration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# YouTube Integration
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Discord Integration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_CHAT_PROCESSING=true
ENABLE_AI_RESPONSES=true
ENABLE_OVERLAY=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP_AUTOMATION=true
ENABLE_DATABASE_MONITORING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEBUG_MODE=false
HOT_RELOAD=true
ENABLE_SWAGGER=true

# Development Ports
FRONTEND_PORT=3000
BACKEND_PORT=3001
REDIS_PORT=6379
POSTGRES_PORT=5432

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# DEBUG_MODE=false
# ENABLE_SWAGGER=false 