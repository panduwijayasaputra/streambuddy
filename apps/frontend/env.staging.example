# StreamBuddy Frontend Staging Environment Variables
# Copy this file to .env.staging.local and fill in your actual values

# =============================================================================
# STAGING CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=staging
NEXT_PUBLIC_NODE_ENV=staging

# Staging Server
NEXT_PUBLIC_API_BASE_URL=https://api-staging.streambuddy.com/api
NEXT_PUBLIC_WS_URL=wss://api-staging.streambuddy.com/ws

# Staging Features
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# =============================================================================
# STAGING API KEYS
# =============================================================================

# OpenAI Staging
NEXT_PUBLIC_OPENAI_API_KEY=your-staging-openai-api-key
NEXT_PUBLIC_OPENAI_MODEL=gpt-4
NEXT_PUBLIC_OPENAI_TEMPERATURE=0.7
NEXT_PUBLIC_OPENAI_MAX_TOKENS=1000

# Anthropic Staging
NEXT_PUBLIC_ANTHROPIC_API_KEY=your-staging-anthropic-api-key
NEXT_PUBLIC_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# STAGING PLATFORM KEYS
# =============================================================================

# Twitch Staging
NEXT_PUBLIC_TWITCH_CLIENT_ID=your-staging-twitch-client-id
NEXT_PUBLIC_TWITCH_REDIRECT_URI=https://staging.streambuddy.com/auth/twitch/callback
NEXT_PUBLIC_TWITCH_SCOPE=chat:read,chat:edit,channel:read:redemptions

# YouTube Staging
NEXT_PUBLIC_YOUTUBE_API_KEY=your-staging-youtube-api-key
NEXT_PUBLIC_YOUTUBE_CLIENT_ID=your-staging-youtube-client-id
NEXT_PUBLIC_YOUTUBE_REDIRECT_URI=https://staging.streambuddy.com/auth/youtube/callback
NEXT_PUBLIC_YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.readonly

# Discord Staging
NEXT_PUBLIC_DISCORD_CLIENT_ID=your-staging-discord-client-id
NEXT_PUBLIC_DISCORD_REDIRECT_URI=https://staging.streambuddy.com/auth/discord/callback
NEXT_PUBLIC_DISCORD_SCOPE=identify,guilds.join

# =============================================================================
# STAGING FEATURE FLAGS
# =============================================================================

# Core Features (enabled for staging)
NEXT_PUBLIC_ENABLE_CHAT_PROCESSING=true
NEXT_PUBLIC_ENABLE_AI_RESPONSES=true
NEXT_PUBLIC_ENABLE_OVERLAY=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Advanced Features (enabled for testing)
NEXT_PUBLIC_ENABLE_VOICE_PROCESSING=true
NEXT_PUBLIC_ENABLE_EMOTION_DETECTION=true
NEXT_PUBLIC_ENABLE_LANGUAGE_DETECTION=true
NEXT_PUBLIC_ENABLE_TRANSLATION=true

# UI Features (enabled for staging)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Staging Features (enabled for testing)
NEXT_PUBLIC_ENABLE_HOT_RELOAD=false
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARIES=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true

# =============================================================================
# STAGING ANALYTICS
# =============================================================================

# Sentry Staging
NEXT_PUBLIC_SENTRY_DSN=your-staging-sentry-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=staging
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.5

# Google Analytics Staging
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-staging-ga-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_DEBUG=true

# Custom Analytics Staging
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_SAMPLE_RATE=0.5

# =============================================================================
# STAGING PERFORMANCE SETTINGS
# =============================================================================

# Performance Settings (optimized for staging)
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_FONT_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_SCRIPT_OPTIMIZATION=true

# Caching (enabled for staging)
NEXT_PUBLIC_CACHE_DURATION=1800
NEXT_PUBLIC_API_CACHE_ENABLED=true

# =============================================================================
# STAGING INTERNATIONALIZATION
# =============================================================================

# Language Settings (focused on Indonesian for staging)
NEXT_PUBLIC_DEFAULT_LOCALE=id
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id
NEXT_PUBLIC_FALLBACK_LOCALE=en

# Translation (enabled for staging)
NEXT_PUBLIC_ENABLE_AUTO_TRANSLATION=true
NEXT_PUBLIC_TRANSLATION_API_KEY=your-staging-translation-api-key

# =============================================================================
# STAGING SECURITY
# =============================================================================

# Security Headers (moderate for staging)
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=true
NEXT_PUBLIC_XSS_PROTECTION=true

# Content Security Policy (moderate for staging)
NEXT_PUBLIC_CSP_DEFAULT_SRC=self
NEXT_PUBLIC_CSP_SCRIPT_SRC=self unsafe-inline
NEXT_PUBLIC_CSP_STYLE_SRC=self unsafe-inline

# =============================================================================
# STAGING AUTHENTICATION
# =============================================================================

# Auth Configuration (staging)
NEXT_PUBLIC_AUTH_DOMAIN=auth-staging.streambuddy.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-staging-auth-client-id
NEXT_PUBLIC_AUTH_REDIRECT_URI=https://staging.streambuddy.com/auth/callback

# JWT Configuration (staging)
NEXT_PUBLIC_JWT_STORAGE_KEY=streambuddy_staging_token
NEXT_PUBLIC_JWT_REFRESH_KEY=streambuddy_staging_refresh_token

# =============================================================================
# STAGING API CONFIGURATION
# =============================================================================

# Backend API (staging)
NEXT_PUBLIC_API_BASE_URL=https://api-staging.streambuddy.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# WebSocket Configuration (staging)
NEXT_PUBLIC_WS_URL=wss://api-staging.streambuddy.com/ws
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=1000

# =============================================================================
# STAGING APPLICATION SETTINGS
# =============================================================================

# Application Settings (staging)
NEXT_PUBLIC_APP_NAME=StreamBuddy Staging
NEXT_PUBLIC_APP_VERSION=1.0.0-staging
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered chat processing for Indonesian streamers (Staging)

# Staging Logging
STAGING_LOG_LEVEL=debug
STAGING_LOG_COLORIZE=true
STAGING_LOG_TIMESTAMP=true

# =============================================================================
# STAGING OPTIMIZATION
# =============================================================================

# Build Optimization
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_MINIFICATION=true
NEXT_PUBLIC_ENABLE_TREE_SHAKING=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn-staging.streambuddy.com
NEXT_PUBLIC_STATIC_URL=https://static-staging.streambuddy.com

# =============================================================================
# STAGING MONITORING
# =============================================================================

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.5

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ERROR_SAMPLE_RATE=1.0

# =============================================================================
# STAGING DEPLOYMENT
# =============================================================================

# Deployment Settings
NEXT_PUBLIC_DEPLOYMENT_ENVIRONMENT=staging
NEXT_PUBLIC_DEPLOYMENT_VERSION=1.0.0-staging
NEXT_PUBLIC_DEPLOYMENT_TIMESTAMP=2024-01-01T00:00:00Z

# Health Checks
NEXT_PUBLIC_HEALTH_CHECK_ENABLED=true
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# STAGING TESTING
# =============================================================================

# Testing Features
NEXT_PUBLIC_ENABLE_TESTING_MODE=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_TEST_ANALYTICS=true

# Test Data
NEXT_PUBLIC_TEST_USER_ID=test-user-123
NEXT_PUBLIC_TEST_CHANNEL_ID=test-channel-456
NEXT_PUBLIC_TEST_GAME_ID=test-game-789 