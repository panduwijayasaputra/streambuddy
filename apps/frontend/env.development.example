# StreamBuddy Frontend Development Environment Variables
# Copy this file to .env.development.local and fill in your actual values

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# Development Server
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# Development Features
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# =============================================================================
# DEVELOPMENT API KEYS (use test keys)
# =============================================================================

# OpenAI Development
NEXT_PUBLIC_OPENAI_API_KEY=sk-test-key-for-development
NEXT_PUBLIC_OPENAI_MODEL=gpt-4
NEXT_PUBLIC_OPENAI_TEMPERATURE=0.7
NEXT_PUBLIC_OPENAI_MAX_TOKENS=1000

# Anthropic Development
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-test-key-for-development
NEXT_PUBLIC_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# DEVELOPMENT PLATFORM KEYS
# =============================================================================

# Twitch Development
NEXT_PUBLIC_TWITCH_CLIENT_ID=test-twitch-client-id
NEXT_PUBLIC_TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback
NEXT_PUBLIC_TWITCH_SCOPE=chat:read,chat:edit,channel:read:redemptions

# YouTube Development
NEXT_PUBLIC_YOUTUBE_API_KEY=test-youtube-api-key
NEXT_PUBLIC_YOUTUBE_CLIENT_ID=test-youtube-client-id
NEXT_PUBLIC_YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback
NEXT_PUBLIC_YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.readonly

# Discord Development
NEXT_PUBLIC_DISCORD_CLIENT_ID=test-discord-client-id
NEXT_PUBLIC_DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
NEXT_PUBLIC_DISCORD_SCOPE=identify,guilds.join

# =============================================================================
# DEVELOPMENT FEATURE FLAGS
# =============================================================================

# Core Features (enabled for development)
NEXT_PUBLIC_ENABLE_CHAT_PROCESSING=true
NEXT_PUBLIC_ENABLE_AI_RESPONSES=true
NEXT_PUBLIC_ENABLE_OVERLAY=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Advanced Features (enabled for testing)
NEXT_PUBLIC_ENABLE_VOICE_PROCESSING=true
NEXT_PUBLIC_ENABLE_EMOTION_DETECTION=true
NEXT_PUBLIC_ENABLE_LANGUAGE_DETECTION=true
NEXT_PUBLIC_ENABLE_TRANSLATION=true

# UI Features (enabled for development)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development Features
NEXT_PUBLIC_ENABLE_HOT_RELOAD=true
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARIES=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true

# =============================================================================
# DEVELOPMENT ANALYTICS (disabled for dev)
# =============================================================================

# Sentry Development (disabled)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=1.0

# Google Analytics Development (disabled)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ANALYTICS_DEBUG=false

# Custom Analytics Development
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_SAMPLE_RATE=0.1

# =============================================================================
# DEVELOPMENT PERFORMANCE SETTINGS
# =============================================================================

# Performance Settings (optimized for development)
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=false
NEXT_PUBLIC_ENABLE_FONT_OPTIMIZATION=false
NEXT_PUBLIC_ENABLE_SCRIPT_OPTIMIZATION=false

# Caching (disabled for development)
NEXT_PUBLIC_CACHE_DURATION=0
NEXT_PUBLIC_API_CACHE_ENABLED=false

# =============================================================================
# DEVELOPMENT HOT RELOADING SETTINGS
# =============================================================================

# Hot Reloading
FAST_REFRESH=true
TURBO=true
NEXT_TELEMETRY_DISABLED=1

# Development Ports
PORT=3000
NEXT_PUBLIC_PORT=3000
NEXT_PUBLIC_FRONTEND_PORT=3000
NEXT_PUBLIC_BACKEND_PORT=3001

# =============================================================================
# DEVELOPMENT INTERNATIONALIZATION
# =============================================================================

# Language Settings (focused on Indonesian for development)
NEXT_PUBLIC_DEFAULT_LOCALE=id
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id
NEXT_PUBLIC_FALLBACK_LOCALE=en

# Translation (enabled for development)
NEXT_PUBLIC_ENABLE_AUTO_TRANSLATION=true
NEXT_PUBLIC_TRANSLATION_API_KEY=test-translation-api-key

# =============================================================================
# DEVELOPMENT SECURITY (relaxed for development)
# =============================================================================

# Security Headers (relaxed for development)
NEXT_PUBLIC_CSP_ENABLED=false
NEXT_PUBLIC_HSTS_ENABLED=false
NEXT_PUBLIC_XSS_PROTECTION=false

# Content Security Policy (relaxed for development)
NEXT_PUBLIC_CSP_DEFAULT_SRC=*
NEXT_PUBLIC_CSP_SCRIPT_SRC=* unsafe-inline unsafe-eval
NEXT_PUBLIC_CSP_STYLE_SRC=* unsafe-inline

# =============================================================================
# DEVELOPMENT AUTHENTICATION
# =============================================================================

# Auth Configuration (development)
NEXT_PUBLIC_AUTH_DOMAIN=auth.streambuddy.dev
NEXT_PUBLIC_AUTH_CLIENT_ID=dev-auth-client-id
NEXT_PUBLIC_AUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# JWT Configuration (development)
NEXT_PUBLIC_JWT_STORAGE_KEY=streambuddy_dev_token
NEXT_PUBLIC_JWT_REFRESH_KEY=streambuddy_dev_refresh_token

# =============================================================================
# DEVELOPMENT API CONFIGURATION
# =============================================================================

# Backend API (development)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=60000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=5

# WebSocket Configuration (development)
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=10
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=500

# =============================================================================
# DEVELOPMENT APPLICATION SETTINGS
# =============================================================================

# Application Settings (development)
NEXT_PUBLIC_APP_NAME=StreamBuddy Dev
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered chat processing for Indonesian streamers (Development)

# Development Logging
DEV_LOG_LEVEL=debug
DEV_LOG_COLORIZE=true
DEV_LOG_TIMESTAMP=true 