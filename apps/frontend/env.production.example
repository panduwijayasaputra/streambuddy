# StreamBuddy Frontend Production Environment Variables
# Copy this file to .env.production.local and fill in your actual values

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production
NEXT_PUBLIC_NODE_ENV=production

# Production Server
NEXT_PUBLIC_API_BASE_URL=https://api.streambuddy.com/api
NEXT_PUBLIC_WS_URL=wss://api.streambuddy.com/ws

# Production Features
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=warn
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# =============================================================================
# PRODUCTION API KEYS
# =============================================================================

# OpenAI Production
NEXT_PUBLIC_OPENAI_API_KEY=your-production-openai-api-key
NEXT_PUBLIC_OPENAI_MODEL=gpt-4
NEXT_PUBLIC_OPENAI_TEMPERATURE=0.7
NEXT_PUBLIC_OPENAI_MAX_TOKENS=1000

# Anthropic Production
NEXT_PUBLIC_ANTHROPIC_API_KEY=your-production-anthropic-api-key
NEXT_PUBLIC_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# PRODUCTION PLATFORM KEYS
# =============================================================================

# Twitch Production
NEXT_PUBLIC_TWITCH_CLIENT_ID=your-production-twitch-client-id
NEXT_PUBLIC_TWITCH_REDIRECT_URI=https://streambuddy.com/auth/twitch/callback
NEXT_PUBLIC_TWITCH_SCOPE=chat:read,chat:edit,channel:read:redemptions

# YouTube Production
NEXT_PUBLIC_YOUTUBE_API_KEY=your-production-youtube-api-key
NEXT_PUBLIC_YOUTUBE_CLIENT_ID=your-production-youtube-client-id
NEXT_PUBLIC_YOUTUBE_REDIRECT_URI=https://streambuddy.com/auth/youtube/callback
NEXT_PUBLIC_YOUTUBE_SCOPE=https://www.googleapis.com/auth/youtube.readonly

# Discord Production
NEXT_PUBLIC_DISCORD_CLIENT_ID=your-production-discord-client-id
NEXT_PUBLIC_DISCORD_REDIRECT_URI=https://streambuddy.com/auth/discord/callback
NEXT_PUBLIC_DISCORD_SCOPE=identify,guilds.join

# =============================================================================
# PRODUCTION FEATURE FLAGS
# =============================================================================

# Core Features (enabled for production)
NEXT_PUBLIC_ENABLE_CHAT_PROCESSING=true
NEXT_PUBLIC_ENABLE_AI_RESPONSES=true
NEXT_PUBLIC_ENABLE_OVERLAY=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Advanced Features (selective for production)
NEXT_PUBLIC_ENABLE_VOICE_PROCESSING=false
NEXT_PUBLIC_ENABLE_EMOTION_DETECTION=false
NEXT_PUBLIC_ENABLE_LANGUAGE_DETECTION=true
NEXT_PUBLIC_ENABLE_TRANSLATION=true

# UI Features (enabled for production)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Production Features (disabled for production)
NEXT_PUBLIC_ENABLE_HOT_RELOAD=false
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARIES=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=false

# =============================================================================
# PRODUCTION ANALYTICS
# =============================================================================

# Sentry Production
NEXT_PUBLIC_SENTRY_DSN=your-production-sentry-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics Production
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-production-ga-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_DEBUG=false

# Custom Analytics Production
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_SAMPLE_RATE=1.0

# =============================================================================
# PRODUCTION PERFORMANCE SETTINGS
# =============================================================================

# Performance Settings (optimized for production)
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_FONT_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_SCRIPT_OPTIMIZATION=true

# Caching (enabled for production)
NEXT_PUBLIC_CACHE_DURATION=3600
NEXT_PUBLIC_API_CACHE_ENABLED=true

# =============================================================================
# PRODUCTION INTERNATIONALIZATION
# =============================================================================

# Language Settings (focused on Indonesian for production)
NEXT_PUBLIC_DEFAULT_LOCALE=id
NEXT_PUBLIC_SUPPORTED_LOCALES=en,id
NEXT_PUBLIC_FALLBACK_LOCALE=en

# Translation (enabled for production)
NEXT_PUBLIC_ENABLE_AUTO_TRANSLATION=true
NEXT_PUBLIC_TRANSLATION_API_KEY=your-production-translation-api-key

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================

# Security Headers (strict for production)
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=true
NEXT_PUBLIC_XSS_PROTECTION=true

# Content Security Policy (strict for production)
NEXT_PUBLIC_CSP_DEFAULT_SRC=self
NEXT_PUBLIC_CSP_SCRIPT_SRC=self
NEXT_PUBLIC_CSP_STYLE_SRC=self

# =============================================================================
# PRODUCTION AUTHENTICATION
# =============================================================================

# Auth Configuration (production)
NEXT_PUBLIC_AUTH_DOMAIN=auth.streambuddy.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-production-auth-client-id
NEXT_PUBLIC_AUTH_REDIRECT_URI=https://streambuddy.com/auth/callback

# JWT Configuration (production)
NEXT_PUBLIC_JWT_STORAGE_KEY=streambuddy_prod_token
NEXT_PUBLIC_JWT_REFRESH_KEY=streambuddy_prod_refresh_token

# =============================================================================
# PRODUCTION API CONFIGURATION
# =============================================================================

# Backend API (production)
NEXT_PUBLIC_API_BASE_URL=https://api.streambuddy.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# WebSocket Configuration (production)
NEXT_PUBLIC_WS_URL=wss://api.streambuddy.com/ws
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=1000

# =============================================================================
# PRODUCTION APPLICATION SETTINGS
# =============================================================================

# Application Settings (production)
NEXT_PUBLIC_APP_NAME=StreamBuddy
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered chat processing for Indonesian streamers

# Production Logging
PROD_LOG_LEVEL=warn
PROD_LOG_COLORIZE=false
PROD_LOG_TIMESTAMP=true

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================

# Build Optimization
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_MINIFICATION=true
NEXT_PUBLIC_ENABLE_TREE_SHAKING=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.streambuddy.com
NEXT_PUBLIC_STATIC_URL=https://static.streambuddy.com

# =============================================================================
# PRODUCTION MONITORING
# =============================================================================

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ERROR_SAMPLE_RATE=1.0

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Deployment Settings
NEXT_PUBLIC_DEPLOYMENT_ENVIRONMENT=production
NEXT_PUBLIC_DEPLOYMENT_VERSION=1.0.0
NEXT_PUBLIC_DEPLOYMENT_TIMESTAMP=2024-01-01T00:00:00Z

# Health Checks
NEXT_PUBLIC_HEALTH_CHECK_ENABLED=true
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000 