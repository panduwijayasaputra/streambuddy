{
  "name": "@streambuddy/backend",
  "version": "1.0.0",
  "description": "StreamBuddy Backend - NestJS API Server",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "type-check": "tsc --noEmit",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:migrate": "typeorm-ts-node-commonjs migration:run -d ormconfig.ts",
    "db:migrate:generate": "typeorm-ts-node-commonjs migration:generate -d ormconfig.ts",
    "db:migrate:revert": "typeorm-ts-node-commonjs migration:revert -d ormconfig.ts",
    "db:seed": "ts-node src/common/database/seeds/run-seeds.ts",
    "db:reset": "npm run db:migrate:revert && npm run db:migrate && npm run db:seed",
    "backup:create": "ts-node src/scripts/backup-cli.ts create",
    "backup:list": "ts-node src/scripts/backup-cli.ts list",
    "backup:restore": "ts-node src/scripts/backup-cli.ts restore",
    "backup:test": "ts-node src/scripts/backup-cli.ts test",
    "backup:schedules": "ts-node src/scripts/backup-cli.ts schedules",
    "backup:run-schedule": "ts-node src/scripts/backup-cli.ts run-schedule",
    "backup:statistics": "ts-node src/scripts/backup-cli.ts statistics",
    "backup:next": "ts-node src/scripts/backup-cli.ts next",
    "db:monitor:metrics": "ts-node src/scripts/database-monitoring-cli.ts metrics",
    "db:monitor:health": "ts-node src/scripts/database-monitoring-cli.ts health",
    "db:monitor:performance": "ts-node src/scripts/database-monitoring-cli.ts performance",
    "db:monitor:pool": "ts-node src/scripts/database-monitoring-cli.ts pool",
    "db:monitor:storage": "ts-node src/scripts/database-monitoring-cli.ts storage",
    "db:monitor:tables": "ts-node src/scripts/database-monitoring-cli.ts tables",
    "db:monitor:indexes": "ts-node src/scripts/database-monitoring-cli.ts indexes",
    "db:monitor:queries": "ts-node src/scripts/database-monitoring-cli.ts queries",
    "db:monitor:slow-queries": "ts-node src/scripts/database-monitoring-cli.ts slow-queries",
    "db:monitor:clear-history": "ts-node src/scripts/database-monitoring-cli.ts clear-history",
    "db:monitor:summary": "ts-node src/scripts/database-monitoring-cli.ts summary",
    "backup:automation:config": "ts-node src/common/utils/backup-automation-cli.util.ts config",
    "backup:automation:execute": "ts-node src/common/utils/backup-automation-cli.util.ts execute",
    "backup:automation:events": "ts-node src/common/utils/backup-automation-cli.util.ts events",
    "backup:automation:statistics": "ts-node src/common/utils/backup-automation-cli.util.ts statistics",
    "backup:automation:health": "ts-node src/common/utils/backup-automation-cli.util.ts health",
    "backup:automation:test": "ts-node src/common/utils/backup-automation-cli.util.ts test",
    "db:performance:metrics": "ts-node src/common/utils/database-performance-cli.util.ts metrics",
    "db:performance:alerts": "ts-node src/common/utils/database-performance-cli.util.ts alerts",
    "db:performance:optimizations": "ts-node src/common/utils/database-performance-cli.util.ts optimizations",
    "db:performance:health": "ts-node src/common/utils/database-performance-cli.util.ts health",
    "db:performance:trends": "ts-node src/common/utils/database-performance-cli.util.ts trends",
    "db:performance:summary": "ts-node src/common/utils/database-performance-cli.util.ts summary",
    "db:performance:history": "ts-node src/common/utils/database-performance-cli.util.ts history",
    "secrets:validate": "ts-node src/scripts/secrets-cli.ts validate",
    "secrets:list": "ts-node src/scripts/secrets-cli.ts list",
    "secrets:generate": "ts-node src/scripts/secrets-cli.ts generate",
    "secrets:rotate": "ts-node src/scripts/secrets-cli.ts rotate",
    "secrets:check": "ts-node src/scripts/secrets-cli.ts check",
    "chat:seed": "ts-node src/scripts/seed-chat-processing.ts",
    "chat:test-ingestion": "ts-node src/scripts/test-chat-ingestion.ts",
    "chat:test-filtering": "ts-node src/scripts/test-content-filtering.ts",
    "chat:test-crud": "ts-node src/scripts/test-template-response-crud.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.0.0",
    "@streambuddy/shared": "file:../packages/shared",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.0",
    "openai": "^4.0.0",
    "pg": "^8.16.3",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "socket.io": "^4.7.0",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
